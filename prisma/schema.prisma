generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  clerkId       String?   @unique // ID de l'utilisateur Clerk
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  calendarToken String?   @unique // Token pour l'abonnement au calendrier
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  events        Event[]
  notes         Note[]
  projects      Project[]
  categories    Category[]
  tags          Tag[]
  journalEntries JournalEntry[]
  calendars     Calendar[]
  reminders     Reminder[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Category {
  id          String   @id @default(cuid())
  name        String
  color       String?
  type        String
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  events      Event[]
  projects    Project[]
  notes       Note[]
}

model Tag {
  id        String   @id @default(cuid())
  name      String
  color     String?
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  events    Event[]
  projects  Project[]
  notes     Note[]
  tasks     Task[]
}

model Event {
  id          String    @id @default(cuid())
  title       String
  description String?
  startDate   DateTime
  endDate     DateTime
  allDay      Boolean   @default(false)
  location    String?
  recurrence  String?
  userId      String
  categoryId  String?
  calendarId  String?
  // Événements récurrents améliorés
  isRecurring Boolean   @default(false)
  recurrenceRule String? // "DAILY", "WEEKLY", "MONTHLY", "YEARLY"
  recurrenceInterval Int? @default(1) // Tous les X jours/semaines/mois
  recurrenceEndDate DateTime? // Date de fin de la récurrence
  recurrenceCount Int? // Nombre d'occurrences
  recurrenceDays String? // Pour WEEKLY: "1,3,5" (lun, mer, ven)
  parentEventId String? // Pour les exceptions
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  calendar    Calendar? @relation(fields: [calendarId], references: [id], onDelete: SetNull)
  tags        Tag[]
  reminders   Reminder[]
  parentEvent Event?    @relation("EventRecurrence", fields: [parentEventId], references: [id], onDelete: Cascade)
  exceptionEvents Event[] @relation("EventRecurrence")
}

model Reminder {
  id            String   @id @default(cuid())
  minutesBefore Int
  eventId       String
  userId        String
  createdAt     DateTime @default(now())

  event         Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Note {
  id          String    @id @default(cuid())
  title       String
  content     String
  userId      String
  categoryId  String?
  linkedDate  DateTime?
  projectId   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  project     Project?  @relation(fields: [projectId], references: [id], onDelete: SetNull)
  tags        Tag[]
}

model Project {
  id          String    @id @default(cuid())
  name        String
  description String?
  type        String    @default("PERSONAL") // BOOK, PERSONAL, PROFESSIONAL, IDEA, OUTING, OTHER
  status      String    @default("PLANNING")
  progress    Int       @default(0)
  startDate   DateTime?
  endDate     DateTime?
  priority    String    @default("NORMAL") // LOW, NORMAL, HIGH, URGENT
  content     String?   // Pour le contenu long (livre, etc.)
  wordCount   Int       @default(0)
  targetWords Int?      // Objectif de mots (pour livre)
  pageCount   Int       @default(0) // Nombre de pages (pour livre)
  targetPages Int?      // Objectif de pages (pour livre)
  coverColor  String?   // Couleur de couverture (pour livre)
  genre       String?   // Genre littéraire (pour livre)
  author      String?   // Auteur (pour livre)
  isbn        String?   // ISBN (pour livre publié)
  userId      String
  categoryId  String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  tags        Tag[]
  tasks       Task[]
  notes       Note[]
  chapters    Chapter[]
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  completed   Boolean   @default(false)
  dueDate     DateTime?
  priority    String    @default("NORMAL")
  order       Int       @default(0)
  projectId   String
  parentTaskId String?  // Pour les sous-tâches
  estimatedMinutes Int? // Temps estimé
  trackedMinutes Int?   // Temps réellement passé
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  parentTask  Task?     @relation("TaskHierarchy", fields: [parentTaskId], references: [id], onDelete: Cascade)
  subtasks    Task[]    @relation("TaskHierarchy")
  tags        Tag[]
}

model Chapter {
  id          String    @id @default(cuid())
  title       String
  content     String?
  order       Int       @default(0)
  wordCount   Int       @default(0)
  projectId   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model JournalEntry {
  id          String    @id @default(cuid())
  date        DateTime
  content     String
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
}

model Calendar {
  id          String   @id @default(cuid())
  name        String
  color       String   @default("#3B82F6")
  userId      String
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  events      Event[]
}

